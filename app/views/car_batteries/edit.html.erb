<h1 style="text-align: center; margin-bottom: 20px;">Edit Car Battery</h1>

<!-- Form Container -->
<div style="max-width: 500px; margin: auto; padding: 20px; background: #f9f9f9; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
  <%= form_with model: @car_battery, local: true do |f| %>
    
    <div style="margin-bottom: 10px;">
      <%= f.label :brand, style: "font-weight: bold;" %><br>
      <%= f.text_field :brand, class: "form-control", style: "width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" %>
    </div>
    
    <div style="margin-bottom: 10px;">
      <%= f.label :model, style: "font-weight: bold;" %><br>
      <%= f.text_field :model, class: "form-control", style: "width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" %>
    </div>
    
    <div style="margin-bottom: 10px;">
      <%= f.label :voltage, style: "font-weight: bold;" %><br>
      <%= f.number_field :voltage, class: "form-control", style: "width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" %>
    </div>

    <div style="margin-bottom: 10px;">
      <%= f.label :price, style: "font-weight: bold;" %><br>
      <%= f.number_field :price, class: "form-control", style: "width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" %>
    </div>

    <div style="margin-bottom: 10px;">
      <%= f.label :warranty, style: "font-weight: bold;" %><br>
      <%= f.number_field :warranty, class: "form-control", style: "width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" %>
    </div>

    <div style="text-align: center; margin-top: 15px;">
      <%= f.submit "Update Battery", class: "btn btn-primary", style: "padding: 10px 15px; font-size: 16px; border-radius: 5px;" %>
    </div>
    
  <% end %>

  <!-- Back Button -->
  <div style="text-align: center; margin-top: 15px;">
    <%= link_to 'Back', car_batteries_path, class: "btn btn-secondary", style: "padding: 8px 12px; font-size: 14px; border-radius: 5px; text-decoration: none;" %>
  </div>
</div>
